<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ingredient_text"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="onClick_Ingredient"
    card_view:cardCornerRadius="10dp"
    card_view:contentPadding="5dp"
    android:layout_margin="5dp"
    android:layout_marginBottom="5dp"
    android:fitsSystemWindows="true"
    >

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:keepScreenOn="true"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/exoplayer_height"
        />

    <TextView
        android:id="@+id/step_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/video_view"
        android:textAlignment="center"
        android:textSize="26sp"
        tools:text="2. Combine the cake flour, 400 grams (2 cups) of sugar, "
        />
    </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="0"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            >

            <ImageButton
                android:id="@+id/previous_btn"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_margin="5dp"
                android:background="@null"
                android:onClick="previous"
                android:scaleType="centerCrop"
                android:src="@drawable/previousbutton" />


            <ImageButton
                android:id="@+id/next_btn"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/previous_btn"
                android:layout_marginEnd="14dp"
                android:layout_marginRight="14dp"
                android:background="@null"
                android:onClick="next"
                android:scaleType="centerCrop"
                android:src="@drawable/nextbutton" />

        </RelativeLayout>

    </LinearLayout>



</ScrollView>

</android.support.v7.widget.CardView>